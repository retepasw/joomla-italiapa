<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="template" method="upgrade">
  <name>italiapa</name>
  <creationDate>November 2017</creationDate>
  <author>Helios Ciancio</author>
  <copyright>Copyright Â© 2017 Helios Ciancio (eshiol.it). All rights reserved.</copyright>
  <authorEmail>info@eshiol.it</authorEmail>
  <authorUrl>https://www.eshiol.it</authorUrl>
  <version>3.8.0.2</version>
  <description><![CDATA[
		<h1>Template ItaliaPA for Joomla! 3.8</h1>
		<p>Implementazione delle
		<a href="http://www.agid.gov.it/tags/linee-guida-design-pa" target="_blank">Linee guida di design per i servizi web della PA</a> basato su
		<a href="https://italia.github.io/design-web-toolkit/" target="_blank">it Web Toolkit</a>.</p>
		<p>Created by <a href="http://www.eshiol.it" target="_blank">Helios Ciancio </a></p>
	]]></description>
  <updateservers>
    <server type="extension" priority="2" name="Template ItaliaPA">https://www.eshiol.it/files/italiapa/tpl_italiapa.xml</server>
  </updateservers>
  <files>
    <folder>build</folder>
    <folder>css</folder>
    <folder>html</folder>
    <filename>js/accordion.min.js</filename>
    <filename>js/drop.min.js</filename>
    <filename>js/map.min.js</filename>
    <filename>js/table.min.js</filename>
    <filename>js/tether.min.js</filename>
    <filename>js/tooltip.min.js</filename>
    <filename>js/uuid.min.js</filename>
    <filename>index.php</filename>
    <filename>error.php</filename>
    <filename>templateDetails.xml</filename>
  </files>
  <languages folder="language">
    <language tag="en-GB">en-GB/en-GB.tpl_italiapa.ini</language>
    <language tag="en-GB">en-GB/en-GB.tpl_italiapa.sys.ini</language>
    <language tag="it-IT">it-IT/it-IT.tpl_italiapa.ini</language>
    <language tag="it-IT">it-IT/it-IT.tpl_italiapa.sys.ini</language>
  </languages>
  <media destination="editors" folder="media">
    <filename>tinymce/plugins/alert/plugin.min.js</filename>
    <filename>tinymce/plugins/callout/plugin.min.js</filename>
    <filename>tinymce/plugins/deflist/deflist.css</filename>
    <filename>tinymce/plugins/deflist/plugin.min.js</filename>
    <filename>tinymce/plugins/format/plugin.min.js</filename>
  </media>
  <positions>
    <position>breadcrumb</position>
    <position>cookiebar</position>
    <position>featured</position>
    <position>footer</position>
    <position>footerinfo</position>
    <position>footermenu</position>
    <position>languages</position>
    <position>lead</position>
    <position>mainmenu</position>
    <position>menu</position>
    <position>news</position>
    <position>right</position>
    <position>search</position>
    <position>services</position>
    <position>socials</position>
    <position>top</position>
  </positions>
  <config>
    <fields name="params">
      <fieldset name="advanced">
        <field name="debug" type="radio" class="btn-group btn-group-yesno" default="0" description="TPL_ITALIAPA_DEBUG_SYSTEM_DESC" label="TPL_ITALIAPA_DEBUG_SYSTEM_LABEL">
          <option value="1">JYES</option>
          <option value="0">JNO</option>
        </field>
        <field name="log" type="text" label="TPL_ITALIAPA_DEBUG_FILENAME_LABEL" description="TPL_ITALIAPA_DEBUG_FILENAME_DESC" default="eshiol.log.php" showon="debug:1"/>
        <field name="phpconsole" type="radio" class="btn-group btn-group-yesno" default="0" description="TPL_ITALIAPA_DEBUG_PHPCONSOLE_DESC" label="TPL_ITALIAPA_DEBUG_PHPCONSOLE_LABEL">
          <option value="1">JYES</option>
          <option value="0">JNO</option>
        </field>
      </fieldset>
      <fieldset name="header" type="upload_func" label="Header">
        <field name="links" type="subform" formsource="templates/italiapa/fields/links.xml" label="TPL_ITALIAPA_FIELD_LINKS_LABEL" description="TPL_ITALIAPA_FIELD_LINKS_DESC" multiple="true" layout="joomla.form.field.subform.repeatable-table"/>
        <field name="logo" type="media" label="TPL_ITALIAPA_FIELD_LOGO_LABEL" description="TPL_ITALIAPA_FIELD_LOGO_LABEL"/>
        <field name="subtitle" type="text" label="TPL_ITALIAPA_FIELD_SUBTITLE_LABEL" description="TPL_ITALIAPA_FIELD_SUBTITLE_LABEL"/>
        <field name="headroom" type="radio" class="btn-group btn-group-yesno" default="0" description="TPL_ITALIAPA_DEBUG_HEADROOM_DESC" label="TPL_ITALIAPA_DEBUG_HEADROOM_LABEL">
          <option value="1">JYES</option>
          <option value="0">JNO</option>
        </field>
      </fieldset>
      <fieldset name="microdata" label="TPL_ITALIAPA_MICRODATA_LABEL">
        <field name="schema_org" type="list" label="TPL_ITALIAPA_SCHEMA_ORGANIZATION_LABEL" description="TPL_ITALIAPA_SCHEMA_ORGANIZATION_DESC" default="Organization" filter="options">
          <option value="Organization">TPL_ITALIAPA_SCHEMA_ORGANIZATION</option>
          <option value="GovernmentOrganization">TPL_ITALIAPA_SCHEMA_GOVERNMENTORGANIZATION</option>
          <option value="EducationalOrganization">TPL_ITALIAPA_SCHEMA_EDUCATIONALORGANIZATION</option>
        </field>
      </fieldset>
    </fields>
  </config>
</extension>
